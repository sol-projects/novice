<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- White background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/lavender" />
        </shape>
    </item>

    <!-- Border -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="@color/white" /> <!-- Border color -->
            <corners android:radius="43dp" />
        </shape>
    </item>

    <!-- Vector image -->
    <item
        android:drawable="@drawable/baseline_post_add_24"
        android:gravity="center"
        android:width="32dp"
        android:height="32dp"
        android:top="3dp"
        android:left="3dp"
        android:right="3dp"
        android:bottom="3dp"/>


</layer-list>