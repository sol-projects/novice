<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid background color for the whole shape -->
    <item>
        <shape>
            <corners android:radius="1dp" />
            <solid android:color="@color/white" /> <!-- Set the corners to transparent -->
        </shape>
    </item>
    <!-- Cyan border -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="@color/cyan" />
            <corners android:radius="78dp" />
        </shape>
    </item>
    <!-- White inside (content) -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="88dp" />
        </shape>
    </item>
</layer-list>